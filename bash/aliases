# Use updated version of Vim on Mac
alias vi='/Applications/MacVim.app/Contents/MacOS/Vim'

# Quick Bash config shortcuts
alias reload='source $HOME/dotfiles/bashrc'             # Reload bashrc
alias ea='vi $HOME/dotfiles/bash/aliases && reload'      # Edit aliases, then reload
alias ee='vi $HOME/dotfiles/bash/env && reload'         # Edit env config, then reload

# Basics and movement
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias la='ls -la'
alias cdd='cd -'
alias pgrep='ps aux | grep'

# Go to default Rails Apps directory
# Only for use on mt(dv) Server
alias cra='cd /var/www/rails_apps'

# Rails
alias rc='rails c'
